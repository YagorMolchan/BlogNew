@model BlogNew.Models.ViewModels.ArticleFilterModel

<link href="~/Content/Site.css" rel="stylesheet" />
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

@using (Html.BeginForm("Index", "Article", FormMethod.Post))
{
    <div class="row panel">
        <div class="col-xs-3">
            <div class="form-group">
                @Html.LabelFor(model => Model.StartDate, new { @class = "control-label col-md-2" })<br />
                <div class="col-md-10">
                    @Html.EditorFor(model => Model.StartDate, new { @class = "datepicker" })
                    @Html.ValidationMessageFor(m => Model.StartDate)
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => Model.FinishDate, new { @class = "control-label col-md-2" })<br />
                <div class="col-md-10">
                    @Html.EditorFor(model => Model.FinishDate, new { @class = "datepicker" })
                    @Html.ValidationMessageFor(m => Model.FinishDate)
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => Model.CategoryId, new { @class = "control-label col-md-2" })<br />
                <div class="col-md-10">
                    @Html.DropDownListFor(m => Model.CategoryId, Model.Categories)
                    @Html.ValidationMessageFor(m => Model.CategoryId)
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => Model.TagText, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => Model.TagText, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => Model.TagText)
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Filter" class="btn btn-success" />
                </div>
            </div>
        </div>
        <div class="col-xs-8">
            @foreach (var item in Model.Articles)
            {
                @Html.Partial("_ArticlePartial", item)
            }
        </div>
    </div>

    @*<div class="container">
            <div class="row">
                @foreach (var item in Model.Articles)
                {
                    @Html.Partial("_ArticlePartial", item)
                }
            </div>
        </div>*@
}

<link href="~/Content/themes/base/jquery-ui.min.css" rel="stylesheet" />
@section scripts{
    <script src="~/Scripts/jquery-ui-1.13.0.min.js"></script>
    <script>
        $(function () {
            $(".datepicker").datepicker({
                dateFormat: "yy-mm-dd"
            });
        })
    </script>
}

